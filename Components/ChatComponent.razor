<div class='root'>
    <div class='beacon' />
    <CascadingValue Value='@this'>
        @for (int i = _messages.Count - 1; i >= 0; i--)
        {
            int _i = i;

            <ChatMessageComponent Message='@_messages[_i]' IsLast='@(_i == _messages.Count - 1)' />
        }
    </CascadingValue>
</div>
